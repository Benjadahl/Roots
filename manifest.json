{
  "manifest_version": 2,

  "name": "Roots",
  "description": "A Chrome extension that shows a tree view of the website structure",
  "version": "0.1",

  "browser_action": {
    "default_icon": "resources/icon.png",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches":["*://*/*"],
      "js":["pull.js"]
    }
  ],
  "background": {
    "scripts":["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ]
}
